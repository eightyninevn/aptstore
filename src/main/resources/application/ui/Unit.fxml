<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity"
	minHeight="-Infinity" minWidth="-Infinity" prefHeight="700.0"
	prefWidth="900.0" xmlns="http://javafx.com/javafx/11.0.1"
	xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UnitCtrl">
	<children>
		<Label layoutX="388.0" layoutY="37.0" prefHeight="18.0"
			prefWidth="38.0" text="Unit" />
			
		<Label layoutX="184.0" layoutY="137.0" text="Name" />
		<TextField fx:id="nameTf" layoutX="245.0" layoutY="133.0"
			prefHeight="26.0" prefWidth="470.0" />
		<CheckBox fx:id="activeChkbox" layoutX="245.0"
			layoutY="185.0" mnemonicParsing="false" text="Active" />

		<Button fx:id="addBtn" layoutX="245.0" layoutY="222.0"
			mnemonicParsing="false" onAction="#addUnit" prefHeight="26.0"
			prefWidth="78.0" text="Add" />
		<Button fx:id="editBtn" layoutX="340.0" layoutY="221.0"
			mnemonicParsing="false" onAction="#editUnit" prefHeight="26.0"
			prefWidth="78.0" text="Edit" />
		<Button fx:id="deleteBtn" layoutX="437.0" layoutY="222.0"
			mnemonicParsing="false" onAction="#deleteUnit" prefHeight="26.0"
			prefWidth="78.0" text="Delete" />
		<Button fx:id="searchBtn" layoutX="538.0" layoutY="221.0"
			mnemonicParsing="false" onAction="#searchUnit" prefHeight="26.0"
			prefWidth="78.0" text="Search" />
		<Button fx:id="showAllBtn" layoutX="637.0" layoutY="222.0"
			mnemonicParsing="false" onAction="#Refresh" prefHeight="26.0"
			prefWidth="78.0" text="Show All" />

		<TableView fx:id="Table" layoutX="245.0" layoutY="336.0"
			onMouseClicked="#SelectedItem" prefHeight="200.0" prefWidth="470.0">
			<columns>
				<TableColumn fx:id="idColumn" prefWidth="93.0" text="ID" />
				<TableColumn fx:id="nameColumn" prefWidth="246.0"
					text="NAME" />
				<TableColumn fx:id="activeColumn" prefWidth="130.0"
					text="ACTIVE" />
			</columns>
		</TableView>
	</children>
</AnchorPane>
